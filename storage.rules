
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access to all files for anyone
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow write access only for authenticated users on specific paths
    // Logos: User can only write to their own logo path
    match /logos/{userId}/logo.png {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Products: User can only upload images to their own product folder
    match /products/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Requests: Authenticated users can upload an image for their request
     match /requests/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
