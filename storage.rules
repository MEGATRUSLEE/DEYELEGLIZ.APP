rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files (e.g., product images, logos)
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict write access. Only authenticated users can upload files.
    // We also check for file size (max 4MB) and type to prevent abuse.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    function isNotTooLarge() {
      return request.resource.size < 4 * 1024 * 1024;
    }

    match /products/{userId}/{fileName} {
      allow write: if isOwner(userId) && isImage() && isNotTooLarge();
    }

    match /requests/{userId}/{fileName} {
       allow write: if isOwner(userId) && isImage() && isNotTooLarge();
    }

    match /logos/{userId}/{fileName} {
       allow write: if isOwner(userId) && isImage() && isNotTooLarge();
    }
  }
}
